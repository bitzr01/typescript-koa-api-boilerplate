{
  "name": "typescript-koa-boilerplate",
  "version": "0.0.1",
  "description": "TypeScript Koa Boilerplate with ",
  "author": "<dev@bitzr.nl>",
  "repository": "https://github.com/bitzr01/typescript-koa-boilerplate",
  "keywords": [
    "typescript",
    "boilerplate",
    "koa",
    "api",
    "alphabit",
    "bitzr"
  ],
  "engines": {
    "node": ">=17.0.0",
    "npm": ">=8.3.2"
  },
  "main": "./dist/tsc/index.js",
  "types": "./dist/tsc/index.d.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 ./dist/tsc/bin/server.js' | pino-pretty -t 'SYS:HH:MM:ss' -i hostname",
    "lint": "eslint src/ --fix --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist docs coverage .nyc_output",
    "build": "tsc",
    "start": "NODE_ENV=production node ./dist/tsc/bin/server.js",
    "test": "NODE_ENV=test mocha",
    "coverage": "NODE_ENV=test nyc mocha"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.6",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.1.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.2",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2"
  },
  "dependencies": {
    "@koa/cors": "^3.2.0",
    "@koa/router": "^10.1.1",
    "joi": "^17.6.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-router": "^10.1.1",
    "moment": "^2.29.1",
    "pino": "^7.8.1",
    "pino-pretty": "^7.5.3"
  }
}
